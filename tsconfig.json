{
  "$schema": "https://json.schemastore.org/tsconfig",
  // "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2020",
    ],
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "target": "es2020"
  },
  "include": [
    "src",
    "types/**/*.d.ts"
  ]
}